<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <Button
        android:text="REGISTER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_submit_button"
        android:textSize="12pt"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorPrimaryDark" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/signup_password2_field"
        android:hint="Repeat Password"
        android:layout_alignBaseline="@+id/signup_password2_label"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp"
        android:layout_alignParentRight="true"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/signup_password_field"
        android:hint="Password"
        android:layout_alignBaseline="@+id/signup_password_label"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/signup_email_field"
        android:hint="Email Address"
        android:layout_alignBaseline="@+id/signup_email_label"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/signup_phone_field"
        android:hint="Phone Number"
        android:layout_alignBaseline="@+id/signup_phone_label"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/signup_dob_field"
        android:hint="Date of birth"
        android:layout_alignBaseline="@+id/signup_dob_label"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/signup_name_field"
        android:hint="Name"
        android:layout_alignBaseline="@+id/signup_name_label"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_signUpTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15dp"
        android:textSize="8pt"
        android:id="@+id/signup_name_label" />

    <TextView
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="16pt"
        android:id="@+id/signup_signUpTitle" />

    <TextView
        android:text="Date of Birth:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_name_field"
        android:textSize="8pt"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/signup_dob_label" />

    <TextView
        android:text="Phone Number:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_dob_field"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="8pt"
        android:id="@+id/signup_phone_label" />

    <TextView
        android:text="Email:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_phone_field"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="8pt"
        android:id="@+id/signup_email_label" />

    <TextView
        android:text="Password:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_email_field"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="8pt"
        android:id="@+id/signup_password_label" />

    <TextView
        android:text="Repeat Password:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_password_field"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="8pt"
        android:id="@+id/signup_password2_label" />

    <ImageView
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/signup"
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/signup_name_label"
        android:layout_above="@+id/signup_name_field" />

</RelativeLayout>